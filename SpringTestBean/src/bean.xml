	<bean id="myMysqlSessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="myMysqlDataSource" />
		<property name="annotatedClasses">
			<list>
				<value>bean.User</value>
				<value>bean.User2</value>
				<value>bean.Customer</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<value>
				hibernate.dialect=org.hibernate.dialect.MySQLDialect
				hibernate.show_sql=true
				hibernate.hbm2ddl.auto=update
				hibernate.format_sql=true
      		</value>
		</property>
	</bean>

	<!--<bean id="oracleTransactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="myOracleSessionFactory"></property>
	</bean>-->

	<bean id="mysqlTransacationManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="myMysqlSessionFactory"></property>
	</bean>

	<!-- 事务管理 -->
	<aop:config>
		<aop:pointcut expression="execution(public * service..*.*(..)))"
			id="txManagerPoint" />
		<aop:advisor advice-ref="txAdvice" pointcut-ref="txManagerPoint" />

	</aop:config>
	<tx:advice id="txAdvice" transaction-manager="mysqlTransacationManager">
		<tx:attributes>
			<tx:method name="add*" propagation="REQUIRED" />
			<tx:method name="update*" propagation="REQUIRED" />
			<tx:method name="modify*" propagation="REQUIRED" />
			<tx:method name="delete*" propagation="REQUIRED" />
			<tx:method name="*" propagation="SUPPORTS" read-only="true" />
		</tx:attributes>
	</tx:advice>
</beans>