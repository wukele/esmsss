	<bean id="useTimeAspectBean" class="aspect.UseTimeAspect"></bean>
	<bean id="user" class="bean.User">
		<property name="username" value="ffmmx"></property>
		<property name="password" value="ffmmx_pass"></property>
		<property name="email" value="firefoxmmx@gmail.com"></property>
	</bean>

	<bean id="userDaoInterface" abstract="true" class="dao.user.UserDaoInterface">
	</bean>
	<bean id="userDaoImp" class="dao.user.UserDaoImp">
		<property name="dataSource" ref="myMysqlDataSource"></property>
	</bean>

	<bean id="userDaoHibernateImp" class="dao.user.UserDaoHibernateImp">
		<property name="sessionFactory" ref="myMysqlSessionFactory"></property>
	</bean>
	
	<bean id="userDao2" class="dao.user.UserDao2">
